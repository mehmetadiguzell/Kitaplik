@model Kitaplik.Models.Kitap
@{
    ViewBag.Title = "Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Ekle</h2>
<br />

@using(Html.BeginForm("Ekle", "Kitap", FormMethod.Post)) { 
    <div class="form-group">       
        <div>
            @Html.LabelFor(x => x.KitapAd)
            @Html.TextBoxFor(x => x.KitapAd, new { @class = "form-control" })
        </div>
        <div>
            @Html.LabelFor(x => x.Yazari)
            @Html.TextBoxFor(x => x.Yazari, new { @class = "form-control" })
        </div>
        <div>
            @Html.LabelFor(x => x.SayfaSayisi)
            @Html.TextBoxFor(x => x.SayfaSayisi, new { @class = "form-control" })
        </div>
        <div>
            @Html.LabelFor(x => x.KategoriId)           
            @Html.DropDownListFor(m => m.KategoriId, (List<SelectListItem>)ViewBag.list, new { @class = "form-control" })
        </div>
        <br />
        <button class="btn btn-primary">Kaydet</button>
    </div>

}
